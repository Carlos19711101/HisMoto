{
  "expo": {
    "name": "HisMoto",
    "slug": "historia-motocicleta",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "#ffffff",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow HisMoto to access your camera",
          "microphonePermission": "Allow HisMoto to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "#ffffff",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicaci칩n necesita acceso a la c치mara para tomar fotos.",
        "NSMicrophoneUsageDescription": "Esta aplicaci칩n necesita acceso al micr칩fono para grabar audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.carlosvelez.hismoto",
      "versionCode": 2,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "statusBar": {
        "backgroundColor": "#ffffff",
        "translucent": true
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "ade28a2f-62b7-41c7-8681-7205fc1883ff"
      }
    }
  }
}