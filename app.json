{
  "expo": {
    "name": "HisCar",
    "slug": "historia-vehiculo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "backgroundColor": "transparent",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "transparent"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow HisMoto to access your camera",
          "microphonePermission": "Allow HisMoto to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "backgroundColor": "transparent",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicaci칩n necesita acceso a la c치mara para tomar fotos.",
        "NSMicrophoneUsageDescription": "Esta aplicaci칩n necesita acceso al micr칩fono para grabar audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.carlosvelez.hismoto",
      "versionCode": 2,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "statusBar": {
          "backgroundColor": "transparent",
          "translucent": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
